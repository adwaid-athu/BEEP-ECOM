<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Beep Audio</title>
    <meta name="keywords" content="HTML5 Template">
    <meta name="description" content="Molla - Bootstrap eCommerce Template">
    <meta name="author" content="p-themes">
    <!-- Plugins CSS File -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/plugins/owl-carousel/owl.carousel.css">
    <link rel="stylesheet" href="/assets/css/plugins/magnific-popup/magnific-popup.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'></link>  

    <!-- Main CSS File -->
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/demos/demo-12.css">
</head>
<script>
    document.addEventListener("DOMContentLoaded", () => {
    const hash = window.location.hash;
    if (hash) {
      const activeTabLink = document.querySelector(`a[href="${hash}"]`);
      if (activeTabLink) {
        activeTabLink.click();
      }
    }
  });
</script>

<body>
    <main class="main">
        <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">My Account<span>Shop</span></h1>
            </div>
        </div>
        
        <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">My Account</li>
                </ol>
            </div>
        </nav>

        <div class="page-content">
            <div class="dashboard">
                <div class="container">
                    <div class="row">
                        <aside class="col-md-4 col-lg-3">
                            <ul class="nav nav-dashboard flex-column mb-3 mb-md-0" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-dashboard-link" data-toggle="tab" href="#tab-dashboard" role="tab" aria-controls="tab-dashboard" aria-selected="false">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-orders-link" data-toggle="tab" href="#tab-orders" role="tab" aria-controls="tab-orders" aria-selected="false">Orders</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-address-link" data-toggle="tab" href="#tab-address" role="tab" aria-controls="tab-address" aria-selected="false">Addresses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-wallet-link" data-toggle="tab" href="#tab-wallet" role="tab" aria-controls="tab-wallet" aria-selected="false">Wallet</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/logOut">Log Out</a>
                                </li>
                            </ul>
                        </aside>

                        <div class="col-md-8 col-lg-9">
                            <div class="tab-content">
                                <!-- Dashboard Tab -->
                                <div class="tab-pane fade show active" id="tab-dashboard" role="tabpanel" aria-labelledby="tab-dashboard-link">
                                    <h3>Hello <%= user.name %></h3>
                                    <div class="card col-lg-5 p-3">
                                        <h5 class="mt-1">User Details</h5>
                                        <h6 class="pt-1">Name : <%= user.name %></h6>
                                        <h6 class="pt-1">Email : <%= user.email %></h6>
                                        <h6 class="pt-1">Mobile: <%= user.phone ? user.phone : "Not Added" %></h6>
                                        <br><a href="/passwordReset" class="forgot-link mb-1 ml-0">Reset Your Password?</a>
                                        <a href="/userEdit" class="btn btn-outline-primary-2"><span>Edit</span><i class="icon-long-arrow-right"></i></a>
                                    </div>
                                </div>

              <!-- Orders Tab -->
              <div class="tab-pane fade" id="tab-orders" role="tabpanel">
                <% if (orderData.length < 1) { %>
                  <p>No orders have been made yet.</p>
                <% } else { %>
                  <table class="table table-bordered">
                    <thead class="table-dark">
                      <tr>
                        <th>Order ID</th>
                        <th>Invoice Date</th>
                        <th>Status</th>
                        <th>Total Price</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% orderData.forEach(order => { %>
                        <tr>
                          <td><%= order.orderId %></td>
                          <td><%= new Date(order.invoiceDate).toLocaleDateString() %></td>
                          <td><%= order.status %></td>
                          <td>â‚¹<%= order.finalAmount %></td>
                          <td><a href="/viewOrder/<%= order._id %>" class="btn btn-info">View</a></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>

                  <!-- Orders Pagination -->
                  <nav>
                    <ul class="pagination">
                      <% if (currentPage > 1) { %>
                        <li class="page-item">
                          <a class="page-link" href="?page=<%= currentPage - 1 %>&walletPage=<%= walletPage %>#tab-orders">&laquo;</a>
                        </li>
                      <% } %>
                      <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                          <a class="page-link" href="?page=<%= i %>&walletPage=<%= walletPage %>#tab-orders"><%= i %></a>
                        </li>
                      <% } %>
                      <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                          <a class="page-link" href="?page=<%= currentPage + 1 %>&walletPage=<%= walletPage %>#tab-orders">&raquo;</a>
                        </li>
                      <% } %>
                    </ul>
                  </nav>
                <% } %>
              </div>
                                <!-- Address Tab -->
                                <div class="tab-pane fade" id="tab-address" role="tabpanel" aria-labelledby="tab-address-link">
                                    <a href="/addAddress" class="btn btn-outline-primary-2"><span>Add Address</span></a>
                                    <br><br>
                                    <% if (addressData && addressData.address.length > 0) { %>
                                        <div class="row">
                                            <% addressData.address.forEach(address => { %>
                                                <div class="col-lg-6">
                                                    <div class="card card-dashboard">
                                                        <div class="card-body pt-3">
                                                            <h5 class="addressAction">
                                                                <a href="/editAddress/<%= address.addressNo %>"><i class="icon-edit"></i></a>
                                                                <a href="javascript:void(0);" onclick="addressDelete('<%= address.addressNo %>')"><i class="bi bi-trash"></i></a>
                                                            </h5>
                                                            <p>
                                                                <h3 class="card-title">Address <%= address.addressNo %></h3>
                                                                <%= address.addressType %> <br>
                                                                <%= address.name %> <br>
                                                                <%= address.city %> <br>
                                                                <%= address.landMark %> <br>
                                                                <%= address.state %> <br>
                                                                <%= address.pincode %> <br>
                                                                <%= address.phone %> <br>
                                                                <%= address.altPhone %> <br>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        </div>
                                    <% } else { %>
                                        <p>No addresses found.</p>
                                    <% } %>
                                </div>

 <!-- Wallet Tab -->
 <div class="tab-pane fade" id="tab-wallet" role="tabpanel">
    <h3>Wallet Balance: â‚¹<%= walletBalance %></h3>
    <h4>Transaction History</h4>
    <% if (walletTransactions.length < 1) { %>
      <p>No transactions found.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead class="table-dark">
          <tr>
            <th>Transaction ID</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% walletTransactions.forEach(transaction => { %>
            <tr>
              <td><%= transaction.transactionId %></td>
              <td><%= transaction.type %></td>
              <td>â‚¹<%= transaction.amount %></td>
              <td><%= transaction.status %></td>
              <td><%= new Date(transaction.date).toLocaleDateString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <!-- Wallet Pagination -->
      <nav>
        <ul class="pagination">
          <% if (walletPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?walletPage=<%= walletPage - 1 %>&page=<%= currentPage %>#tab-wallet">&laquo;</a>
            </li>
          <% } %>
          <% for (let i = 1; i <= totalWalletPages; i++) { %>
            <li class="page-item <%= i === walletPage ? 'active' : '' %>">
              <a class="page-link" href="?walletPage=<%= i %>&page=<%= currentPage %>#tab-wallet"><%= i %></a>
            </li>
          <% } %>
          <% if (walletPage < totalWalletPages) { %>
            <li class="page-item">
              <a class="page-link" href="?walletPage=<%= walletPage + 1 %>&page=<%= currentPage %>#tab-wallet">&raquo;</a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>
  </div>
</div>
</div>
</div>
</div>
</div>
</div>
</main>


    <script>
          
        function addressDelete(addressNo) {
            Swal.fire({
                title: "Are you sure?",
                text: "Do you want to delete this address?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!",
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/deleteAddress/${addressNo}`;
                }
            });
        }
      
    </script>
    
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/plugins/owl-carousel/owl.carousel.min.js"></script>
    <script src="/assets/js/plugins/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="/assets/js/main.js"></script>
    <script src="/assets/js/demos/demo-12.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>
</body>
</html>
