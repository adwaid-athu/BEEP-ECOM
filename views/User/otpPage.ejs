                    title: "OTP Resend Successfully",
                    showConfirmButton: false,
                    timer: 1500,
                })
            }else{
                Swal.fire({
                    icon: "error",
                    title: data.message,
                    showConfirmButton: true,
                
                })

            }
        })
    }
    </script>
