<%- include('../partials/admin/adminHeader.ejs') %>

<div class="container mt-5">
    <h2>Order Details</h2>

    <!-- Include SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Function to update order status
        async function updateOrderStatus(orderId) {
            const newStatus = document.getElementById(`statusSelect-${orderId}`).value; // Get the selected status
            try {
                const response = await fetch(`/admin/order/update/${orderId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status: newStatus }),
                });

                const data = await response.json(); // Assuming your API responds with JSON

                // Check response status and show appropriate message
                if (response.ok) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        timer: 2000,
                        text: data.message || 'Order status updated successfully.',
                        showConfirmButton: false,
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    await Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: data.error || 'An error occurred while updating the order status.',
                    });
                }
            } catch (error) {
                console.error("Error updating order status:", error);
                await Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'An unexpected error occurred.',
                });
            }
        }
    </script>

    <!-- Order Information -->
    <div class="card mb-4">
        <div class="card-header">Order Information</div>
        <div class="card-body">
            <p><strong>Order ID:</strong> <%= order.orderId %></p>
            <p><strong>Invoice Date:</strong>  <%= new Date(order.invoiceDate).toISOString().split('T')[0] %></p>
       

            <p><strong>Created On:</strong>  <%= new Date(order.createdOn).toISOString().split('T')[0] %></p>
            <p><strong>Status:</strong> <%= order.status %></p>

            <!-- Dropdown for Status Selection -->
            <select id="statusSelect-<%= order._id %>" class="form-select">
                <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                <option value="Return" <%= order.status === 'Return' ? 'selected' : '' %>>Return</option>
                <option value="Returned" <%= order.status === 'Returned' ? 'selected' : '' %>>Returned</option>
            </select>
            
            <!-- Update Status Button -->
            <button onclick="updateOrderStatus('<%= order._id %>')" class="btn btn-primary mt-2">Update Status</button>
        </div>
    </div>

    <!-- Customer Information -->
    <div class="card mb-4">
        <div class="card-header">Customer Information</div>
        <div class="card-body">
            <p><strong>Name:</strong> <%= order.address.name %></p>
            <p><strong>Address:</strong> <%= order.address.landMark %>, <%= order.address.city %>, <%= order.address.state %>, <%= order.address.pincode %></p>
            <p><strong>Phone:</strong> <%= order.address.phone %></p>
            <p><strong>Alternate Phone:</strong> <%= order.address.altPhone || 'N/A' %></p>
        </div>
    </div>

    <!-- Ordered Items Table -->
    <div class="table-responsive mb-4">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% order.orderedItems.forEach(item => { %>
                    <tr>
                        <td><%= item.product.productName %></td>
                        <td><%= item.quantity %></td>
                        <td>₹<%= item.price %></td>
                        <td>₹<%= (item.price * item.quantity).toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Payment & Summary -->
    <div class="card">
        <div class="card-header">Payment & Summary</div>
        <div class="card-body">
            <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
            <p><strong>Total Price:</strong> ₹<%= order.finalAmount + order.discount %></p>
            <p><strong>Discount:</strong> ₹<%= order.discount ? order.discount.toFixed(2) : '0.00' %></p>
            <p><strong>Final Amount:</strong> ₹<%= order.finalAmount ? order.finalAmount.toFixed(2) : '0.00' %></p>
        </div>
    </div>

    <div class="mt-4">
        <a href="/admin/orders" class="btn btn-secondary">Back to Orders</a>
    </div>
</div>

<%- include('../partials/admin/adminFooter.ejs') %>

<style>
    .card-header {
        font-weight: bold;
        font-size: 1.1rem;
    }
    .table td, .table th {
        text-align: center;
        vertical-align: middle;
    }
</style>
