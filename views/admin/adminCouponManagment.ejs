<%- include('../partials/admin/adminHeader.ejs') %>
<div class="container mt-5">
    <h1 class="text-center">Coupon Management</h1>

    <div class="text-right mb-3">
        <a href="/admin/coupon/add" class="btn btn-success">Add New Coupon</a>
    </div>

    <h2 class="text-center mb-4">All Coupons</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered custom-table">
            <thead class="thead-dark">
                <tr>
                    <th class="coupon-code">Coupon Code</th>
                    <th class="expiry-date">Expiry Date</th>
                    <th class="offer-price">Offer Price</th>
                    <th class="minimum-price">Minimum Price</th>
                    <th class="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% coupons.forEach(coupon => { %>
                    <tr>
                        <td><%= coupon.couponCode %></td>
                        <td><%= new Date(coupon.expireOn).toLocaleDateString() %></td>
                        <td><%= coupon.offerPrice %></td>
                        <td><%= coupon.minimumPrice %></td>
                        <td>
                            <button class="btn btn-danger btn-sm action-btn" onclick="confirmDelete('<%= coupon._id %>')">Delete</button>
                            <a href="/admin/coupon/update/<%= coupon._id %>" class="btn btn-warning btn-sm action-btn">Update</a>
                            <% if (coupon.isActive) {%>
                                <button class="btn btn-danger btn-sm action-btn" onclick="confirmDeactivate('<%= coupon._id %>')">Deactivate</button>
                            <% } else {%>
                                <button class="btn btn-success btn-sm action-btn" onclick="confirmActivate('<%= coupon._id %>')">Activate</button>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo;</a>
                </li>
            <% } %>
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>
            <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>">&raquo;</a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

<script>
function confirmDeactivate(id){
    Swal.fire({
        title: 'Are you sure?',
        text: 'Coupon Will Be Deactivated',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, Deactivate it!'
    }).then((result) => {
        if (result.isConfirmed) {
            
            fetch(`/admin/coupon/deactivate/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Deactivated!',
                        text: 'Coupon has been deactivated successfully.',
                        showConfirmButton: false,
                        timer: 2000
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'There was an error deactivating the coupon.',
                    });
                }
            })
            .catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Something went wrong, please try again later.',
                });
            });
        }
    });
}

function confirmActivate(id){
    Swal.fire({
        title: 'Are you sure?',
        text: 'Coupon Will Be Activated',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, Activate it!'
    }).then((result) => {
        if (result.isConfirmed) {
           
            fetch(`/admin/coupon/activate/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Activated!',
                        text: 'Coupon has been activated successfully.',
                        showConfirmButton: false,
                        timer: 2000
                    }).then(() => {
                        location.reload(); 
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'There was an error activating the coupon.',
                    });
                }
            })
            .catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Something went wrong, please try again later.',
                });
            });
        }
    });
}
</script>

<style>


    .custom-table .coupon-code {
        width: 25%;
    }

    .custom-table .expiry-date {
        width: 20%;
    }

    .custom-table .offer-price {
        width: 15%;
    }

    .custom-table .minimum-price {
        width: 15%;
    }

    .custom-table .actions {
        width: 25%;
    }

   
</style>

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
